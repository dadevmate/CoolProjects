function printPlus(){

  var input = document.getElementById("numInput");
  input.value = input.value + "+";

}


function printMinus(){

  var input = document.getElementById("numInput");
  input.value = input.value + "-";

}

function printDivide(){

  var input = document.getElementById("numInput");
  input.value = input.value + "/";

}


function printMultiply(){

  var input = document.getElementById("numInput");
  input.value = input.value + "*";

}


function printEnter(){

  var input = document.getElementById("numInput");
  input.value = eval(input.value);

}


function printClear(){

var input = document.getElementById("numInput");
input.value = "";

}


