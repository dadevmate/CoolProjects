function selectThemeDesert(){

var body = document.getElementById("body");
body.style.backgroundColor = "#d9811c";


}

function selectThemeCity (){

  var body = document.getElementById("body");
  body.style.backgroundColor = "#2ab4c9";


}

function selectThemeMountains (){

  var body = document.getElementById("body");
  body.style.backgroundColor = "#487dc2";

}

function selectThemeSpace (){

  var body = document.getElementById("body");
  body.style.backgroundColor = "#9a67c7";

}

function print0(){

 var input = document.getElementById("numInput");
 input.value = input.value + 0;


}

function print1(){

  var input = document.getElementById("numInput");
  input.value = input.value + 1;

}

